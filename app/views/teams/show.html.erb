<p id="notice"><%= notice %></p>

<p>
  <strong>Team's name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong><%= pluralize(@team.users.count, 'Member')%></strong>
  <ul>
    <% @team.users.each do |user| %>
    <li>
        <%= user.username %>
    </li>
    <% end %>
  </ul>
</p>

<p>
  <strong><%= pluralize(@team.projects.count, 'Project')%></strong>
  <ul>
    <% @team.projects.each do |project| %>
    <li>
        <%= link_to project.name, project_url(project.id) %>
    </li>
    <% end %>
  </ul>
</p>


<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>
